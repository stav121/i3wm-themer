! COLOR PALETTE HERE !
*.foreground:   #c5c8c6
*.background:   #1e1e20
*.cursorColor:  #c5c8c6

*.color0:       #1e1e20
*.color8:       #cbd1cd
*.color1:       #cbd1cd
*.color9:       #cbd1cd
*.color2:       #c4cbc6
*.color10:      #c4cbc6
*.color3:       #bdc4bf
*.color11:      #bdc4bf
*.color4:       #b6beb8
*.color12:      #b6beb8
*.color5:       #a3aba5
*.color13:      #a3aba5
*.color6:       #919893
*.color14:      #919893
*.color7:       #d3d8d4
*.color15:      #d3d8d4

*fading:                15
*fadeColor:             black
*pointerColorBackground:#2B2C2B
*pointerColorForeground:#16A085

Xcursor.theme: Breeze
Xcursor.size:  0

XTerm*background: #6aa7a5
XTerm*foreground: #6aa7a5
XTerm*reverseVideo: on
XTerm*faceName: HackRegular:size=11:antialias=true
XTerm*selectToClipboard: true

! URxvt SETUP HERE !
URxvt.internalBorder: 6
URxvt.font: xft:monofur:size=12
URxvt.geometry: 80x20
URxvt.depth: 32
URxvt.background:	[100]#1e1e20
URxvt*scrollBar:                      false
URxvt*mouseWheelScrollPage:           false
URxvt*cursorBlink:                    true
URxvt*foreground: 		                #c5c8c6
URxvt*cursorColor:		                #c5c8c6
URxvt*saveLines:                      5000

! ROFI SETUP HERE !

! Enable the extended coloring options
rofi.color-enabled: true
!                  bg       border   separator
rofi.color-window: #1e1e20, #b6beb8, #b6beb8
!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #1e1e20, #c5c8c6, #1e1e20, #1e1e20, #b6beb8
rofi.color-active: #1e1e20, #c5c8c6, #1e1e20, #1e1e20, #b6beb8
rofi.color-urgent: #1e1e20, #c5c8c6, #1e1e20, #1e1e20, #b6beb8

rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.lines: 5
rofi.font: monofur 13
rofi.bw: 1
rofi.columns: 2
rofi.padding: 5
rofi.fixed-num-lines: true
rofi.hide-scrollbar: true
